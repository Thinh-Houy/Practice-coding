                        </for>
                        <output expression="&quot;\n&quot;" newline="True"/>
                    </for>
                </then>
                <else>
                    <output expression="&quot;Please enter the number that bigger than 0&quot;" newline="True"/>
                </else>
            </if>
        </body>
