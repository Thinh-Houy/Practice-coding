    <function name="Main" type="None" variable="">
        <parameters/>
        <body>
            <declare name="num, i, j" type="Integer" array="False" size=""/>
            <output expression="&quot;This program user input a value of n and then the ouptut show the decrement from n to 1 in both row and column.&quot;" newline="True"/>
            <input variable="num"/>
            <if expression="num&gt;0">
                <then>
                    <for variable="i" start="0" end="num" direction="inc" step="1">
                        <for variable="j" start="num-i" end="0" direction="dec" step="1">
                            <output expression="j" newline="False"/>
